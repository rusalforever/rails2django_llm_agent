<div class="w-full h-96 rounded-lg bg-gray-200 flex flex-col group">
  <div class="w-full h-64">
    <% if blog_post.banner_image.attached? %>
      <%= image_tag blog_post.banner_image, class: "h-full w-full object-cover rounded-t-lg" %>
    <% else %>
      <%= image_tag "books.jpg", class: "h-full w-full object-cover rounded-t-lg" %>
    <% end %>
  </div>

  <div class="h-14 flex-shrink-0 w-full px-4 overflow-hidden text-ellipsis"> 
    <p class="text-xl text-gray-900 overflow-hidden font-semibold"> 
      <%= blog_post.title %>
    </p>
  </div>

  <div class="w-full h-full flex items-center px-4">
    <%= link_to "Read post", blog_post, class: "px-3 py-2 rounded-lg bg-gradient-to-r from-blue-500 to-purple-500 via-indigo-500 text-indigo-50 hover:scale-105" %>
  </div>
</div>